      <h1>Product List</h1>
  <table border="1">
    <thead>
      <tr>
        <th>Product</th>
        <th>Description</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(products => { %>
        <tr>
          <td><%= products.name %></td>
          <td><%= products.description %></td>
          <td><%= products.price %></td>
        </tr>
        <% }) %>
    </tbody>
  </table>

